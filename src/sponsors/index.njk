---
layout: layouts/base.njk
title: Our Sponsors
description: Meet our valued sponsors who support Southern Districts Cricket Club Darwin - The Crocs. Their partnership helps us provide quality cricket for our community.
---

<!-- Hero Section -->
<section class="bg-secondary-50 py-8 lg:py-10">
    <div class="container">
        <div class="text-center">
            <h1 class="font-heading text-3xl sm:text-4xl lg:text-5xl font-bold text-primary-800 mb-3">
                Our Valued Sponsors
            </h1>
            <p class="text-lg text-primary-600 mb-4">
                Supporting The Crocs and cricket in NT
            </p>
            <div class="w-24 h-1 bg-accent-400 mx-auto"></div>
        </div>
    </div>
</section>


<!-- Platinum Sponsors -->
{% set platinumCount = 0 %}
{% for sponsor in sponsors %}
  {% if sponsor.type == "Platinum" %}
    {% set platinumCount = platinumCount + 1 %}
  {% endif %}
{% endfor %}

{% if platinumCount > 0 %}
<section class="page-section bg-gradient-to-br from-gray-50 to-gray-100">
    <div class="container">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-12">
                <div class="inline-flex items-center space-x-3 mb-4">
                    <div class="w-8 h-8 bg-gradient-to-r from-gray-400 to-gray-600 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M10 1l2.39 4.84L18 6.52l-4 3.89.94 5.48L10 13.77 5.06 15.9 6 10.42l-4-3.89 5.61-.68L10 1z"/>
                        </svg>
                    </div>
                    <h2 class="font-heading text-3xl sm:text-4xl font-bold text-primary-800">Platinum Sponsors</h2>
                </div>
                <p class="text-gray-600 text-lg">Our premium partners providing exceptional support</p>
            </div>

            <div class="{% if platinumCount == 1 %}flex justify-center{% else %}grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6{% endif %}">
                {% for sponsor in sponsors %}
                {% if sponsor.type == "Platinum" %}
                <div class="bg-white rounded-xl shadow-lg p-6 hover:shadow-xl transition-all duration-300 hover:scale-105 {% if platinumCount == 1 %}max-w-sm{% endif %}">
                    <div class="text-center">
                        <div class="mb-4 h-24 flex items-center justify-center">
                            <img src="{{ sponsor.logo }}" 
                                 alt="{{ sponsor.name }} Logo" 
                                 class="max-h-full max-w-full object-contain"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="w-full h-24 bg-gray-100 rounded-lg items-center justify-center text-gray-400 text-sm flex" style="display: none;">
                                {{ sponsor.name }}
                            </div>
                        </div>
                        <h3 class="font-heading text-xl font-bold text-primary-800 mb-2">{{ sponsor.name }}</h3>
                        <p class="text-gray-600 text-sm mb-3">{{ sponsor.description }}</p>
                        {% if sponsor.website %}
                        <a href="{{ sponsor.website }}" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="text-primary-600 hover:text-primary-700 text-sm font-medium">
                            Visit Website →
                        </a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>
{% endif %}


