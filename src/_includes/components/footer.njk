<footer class="bg-primary-800 text-white">
    <div class="container section">
        <div class="grid grid-cols-1 md:grid-cols-3 gap-8 lg:gap-12">
            <!-- Club Information -->
            <div class="space-y-4">
                <div>
                    <h3 class="font-heading text-xl font-semibold mb-2">
                        {{ pageData.footer.clubName }}
                    </h3>
                    <p class="text-accent-400 font-medium text-lg">
                        {{ pageData.footer.nickname }}
                    </p>
                </div>
                <div class="text-gray-300">
                    <p>{{ pageData.footer.address }}</p>
                    <p class="mt-2">
                        <a href="tel:{{ site.phone }}" class="hover:text-accent-400 transition-colors">
                            {{ site.phone }}
                        </a>
                    </p>
                    <p>
                        <a href="mailto:{{ site.email }}" class="hover:text-accent-400 transition-colors">
                            {{ site.email }}
                        </a>
                    </p>
                    <p>
                        <a href="mailto:{{ site.email2 }}" class="hover:text-accent-400 transition-colors">
                            {{ site.email2 }}
                        </a>
                    </p>
                </div>
            </div>
            
            <!-- Quick Links -->
            <div class="space-y-4">
                <h3 class="font-heading text-xl font-semibold">Quick Links</h3>
                <nav class="space-y-2" aria-label="Footer Navigation">
                    {% for link in site.footerLinks %}
                    <a href="{{ link.url }}" 
                       class="block text-gray-300 hover:text-accent-400 transition-colors">
                        {{ link.title }}
                    </a>
                    {% endfor %}
                </nav>
            </div>
            
            <!-- Connect With Us -->
            <div class="space-y-4">
                <h3 class="font-heading text-xl font-semibold">Connect With Us</h3>
                <p class="text-gray-300">{{ pageData.footer.socialText }}</p>
                
                <!-- Social Media Links - Facebook and Instagram -->
                <div class="flex space-x-4 items-center">
                    {% if site.social.facebook %}
                    <a href="{{ site.social.facebook }}" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-gray-300 hover:text-accent-400 transition-colors"
                    aria-label="Follow us on Facebook">
                        <span class="inline-flex items-center justify-center h-6 w-6">
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                                <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                            </svg>
                        </span>
                    </a>
                    {% endif %}
                    {% if site.social.instagram %}
                    <a href="{{ site.social.instagram }}" 
                    target="_blank" 
                    rel="noopener noreferrer"
                    class="text-gray-300 hover:text-accent-400 transition-colors"
                    aria-label="Follow us on Instagram">
                        <span class="inline-flex items-center justify-center h-6 w-6">
                            <svg class="h-6 w-6" fill="currentColor" viewBox="0 0 24 24" preserveAspectRatio="xMidYMid meet">
                                <path d="M12 2.163c3.204 0 3.584.012 4.85.07 1.366.062 2.633.326 3.608 1.301.975.975 1.24 2.242 1.301 3.608.058 1.266.07 1.646.07 4.85s-.012 3.584-.07 4.85c-.062 1.366-.326 2.633-1.301 3.608-.975.975-2.242 1.24-3.608 1.301-1.266.058-1.646.07-4.85.07s-3.584-.012-4.85-.07c-1.366-.062-2.633-.326-3.608-1.301-.975-.975-1.24-2.242-1.301-3.608-.058-1.266-.07-1.646-.07-4.85s.012-3.584.07-4.85c.062-1.366.326-2.633 1.301-3.608.975-.975 2.242-1.24 3.608-1.301 1.266-.058 1.646-.07 4.85-.07zm0-2.163c-3.259 0-3.667.014-4.947.072-1.628.074-3.082.414-4.265 1.596-1.182 1.182-1.522 2.636-1.596 4.265-.058 1.28-.072 1.688-.072 4.947s.014 3.667.072 4.947c.074 1.628.414 3.082 1.596 4.265 1.182 1.182 2.636 1.522 4.265 1.596 1.28.058 1.688.072 4.947.072s3.667-.014 4.947-.072c1.628-.074 3.082-.414 4.265-1.596 1.182-1.182 1.522-2.636 1.596-4.265.058-1.28.072-1.688.072-4.947s-.014-3.667-.072-4.947c-.074-1.628-.414-3.082-1.596-4.265-1.182-1.182-2.636-1.522-4.265-1.596-1.28-.058-1.688-.072-4.947-.072zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.162 6.162 6.162 6.162-2.759 6.162-6.162-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.791-4-4s1.791-4 4-4 4 1.791 4 4-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.441s.645 1.441 1.441 1.441 1.441-.645 1.441-1.441-.645-1.441-1.441-1.441z"/>
                            </svg>
                        </span>
                    </a>
                    {% endif %}
                </div>
            </div>
        </div>
        
        <!-- Bottom Bar -->
        <div class="border-t border-primary-700 mt-8 pt-8 flex flex-col sm:flex-row justify-between items-center space-y-4 sm:space-y-0">
            <p class="text-gray-300 text-sm">
                {{ pageData.footer.copyright }}
            </p>
            <p class="text-gray-300 text-sm">
                <a href="{{ pageData.footer.creditUrl }}" 
                       target="_blank" 
                       rel="noopener noreferrer">
                {{ pageData.footer.credit }}
                </a>
            </p>
        </div>
    </div>
</footer>