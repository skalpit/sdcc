---
layout: layouts/base.njk
---

<section class="py-16 bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <h1 class="text-4xl font-bold text-gray-900 mb-8">{{ title }}</h1>
        
        {{ content | safe }}
        
        <!-- Facebook Feed Container -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8" id="facebook-feed">
            <!-- Facebook posts will be loaded here -->
        </div>
        
        <!-- Load More Button -->
        <div class="text-center mt-12">
            <button id="load-more" class="btn-primary">Load More Posts</button>
        </div>
    </div>
</section>