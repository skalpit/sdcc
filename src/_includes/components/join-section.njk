<section class="py-8 lg:py-10 bg-primary-800 text-white relative overflow-hidden">
    <!-- Background Pattern -->
    <div class="absolute inset-0 opacity-5">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 100 100\"><defs><pattern id=\"joinpattern\" x=\"0\" y=\"0\" width=\"30\" height=\"30\" patternUnits=\"userSpaceOnUse\"><circle cx=\"15\" cy=\"15\" r=\"2\" fill=\"%23ffffff\" opacity=\"0.4\"/><circle cx=\"5\" cy=\"5\" r=\"1\" fill=\"%23ffffff\" opacity=\"0.3\"/><circle cx=\"25\" cy=\"25\" r=\"1\" fill=\"%23ffffff\" opacity=\"0.3\"/></pattern></defs><rect width=\"100\" height=\"100\" fill=\"url(%23joinpattern)\"/></svg>'); background-size: 150px 150px;"></div>
    </div>
    
    <div class="container relative z-10">
        <div class="max-w-4xl mx-auto text-center space-y-4">
            <!-- Title -->
            <h2 class="font-heading text-2xl sm:text-3xl lg:text-4xl font-bold text-shadow-lg">
                {{ pageData.joinSection.title }}
            </h2>
            
            <!-- Description -->
            <p class="text-base sm:text-lg lg:text-xl text-gray-200 leading-relaxed max-w-3xl mx-auto text-shadow">
                {{ pageData.joinSection.description }}
            </p>
            
            <!-- Call to Action -->
            <div class="pt-3">
                <a href="{{ pageData.joinSection.buttonUrl }}" 
                   class="btn-primary px-6 py-3 inline-block">
                    {{ pageData.joinSection.buttonText }}
                </a>
            </div>
        </div>
    </div>
    
    <!-- Decorative Elements -->
    <div class="absolute top-4 left-4 w-8 h-8 border border-accent-400 rounded-full opacity-20"></div>
    <div class="absolute bottom-4 right-4 w-12 h-12 border border-accent-400 rounded-full opacity-10"></div>
    <div class="absolute top-1/2 left-2 w-6 h-6 border border-accent-400 rounded-full opacity-15"></div>
</section> 