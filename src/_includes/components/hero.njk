<section class="hero-bg py-12 lg:py-16 relative overflow-hidden">
    <!-- Background Pattern Overlay -->
    <div class="absolute inset-0 opacity-10">
        <div class="absolute inset-0" style="background-image: url('data:image/svg+xml,{{ '<svg xmlns=\"http://www.w3.org/2000/svg\" viewBox=\"0 0 100 100\"><defs><pattern id=\"cricketpattern\" x=\"0\" y=\"0\" width=\"20\" height=\"20\" patternUnits=\"userSpaceOnUse\"><circle cx=\"10\" cy=\"10\" r=\"1\" fill=\"#ffffff\" opacity=\"0.3\"/><path d=\"M5,5 L15,15 M15,5 L5,15\" stroke=\"#ffffff\" stroke-width=\"0.5\" opacity=\"0.2\"/></pattern></defs><rect width=\"100\" height=\"100\" fill=\"url(#cricketpattern)\"/></svg>' | urlEncodeSvg }}'); background-size: 100px 100px;"></div>
    </div>
    
    <div class="container relative z-10">
        <div class="max-w-4xl mx-auto text-center space-y-4">
            <!-- Main Heading -->
            <div class="space-y-3 fade-in">
                <h1 class="font-heading text-2xl sm:text-3xl lg:text-4xl xl:text-5xl font-bold text-white text-shadow-lg leading-tight">
                    {{ pageData.hero.title }}
                </h1>
                
                <!-- Subtitle -->
                <h2 class="text-accent-400 text-lg sm:text-xl lg:text-2xl font-semibold text-shadow">
                    {{ pageData.hero.subtitle }}
                </h2>
            </div>
            
            <!-- Description -->
            <p class="text-white text-sm sm:text-base lg:text-lg max-w-2xl mx-auto text-shadow leading-relaxed fade-in">
                {{ pageData.hero.description }}
            </p>
            
            <!-- Call to Action Buttons -->
            <div class="flex flex-col sm:flex-row gap-3 justify-center items-center pt-4 fade-in">
                <a href="{{ pageData.hero.primaryButton.url }}" 
                   class="btn-primary px-5 py-2.5 text-sm w-full sm:w-auto">
                    {{ pageData.hero.primaryButton.text }}
                </a>
                <a href="{{ pageData.hero.secondaryButton.url }}" 
                   class="btn-secondary px-5 py-2.5 text-sm w-full sm:w-auto">
                    {{ pageData.hero.secondaryButton.text }}
                </a>
            </div>
        </div>
    </div>
</section>