<!-- Gold Sponsors -->
<section class="page-section bg-gradient-to-br from-yellow-50 to-amber-100">
    <div class="container">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-10">
                <div class="inline-flex items-center space-x-3 mb-4">
                    <div class="w-8 h-8 bg-gradient-to-r from-yellow-400 to-amber-600 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
                        </svg>
                    </div>
                    <h2 class="font-heading text-3xl font-bold text-primary-800">Gold Sponsors</h2>
                </div>
                <p class="text-gray-600">Valued partners supporting our cricket community</p>
            </div>
            
            <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-4 gap-4">
                {% for sponsor in sponsors %}
                {% if sponsor.type == "Gold" %}
                <div class="bg-white rounded-lg shadow-md p-4 hover:shadow-lg transition-all duration-300 hover:scale-105">
                    <div class="text-center">
                        <div class="mb-3 h-16 flex items-center justify-center">
                            <img src="{{ sponsor.logo }}" 
                                 alt="{{ sponsor.name }} Logo" 
                                 class="max-h-full max-w-full object-contain"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="w-full h-16 bg-gray-100 rounded items-center justify-center text-gray-400 text-xs flex" style="display: none;">
                                {{ sponsor.name }}
                            </div>
                        </div>
                        <h3 class="font-heading text-sm font-semibold text-primary-800 mb-1">{{ sponsor.name }}</h3>
                        <p class="text-gray-600 text-xs mb-2">{{ sponsor.description }}</p>
                        {% if sponsor.website %}
                        <a href="{{ sponsor.website }}" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="text-primary-600 hover:text-primary-700 text-xs">
                            Visit →
                        </a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<!-- Silver Sponsors -->
<section class="page-section bg-gradient-to-br from-gray-50 to-slate-100">
    <div class="container">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-10">
                <div class="inline-flex items-center space-x-3 mb-4">
                    <div class="w-8 h-8 bg-gradient-to-r from-gray-300 to-slate-500 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M2 10.5a1.5 1.5 0 113 0v6a1.5 1.5 0 01-3 0v-6zM6 10.333v5.43a2 2 0 001.106 1.79l.05.025A4 4 0 008.943 18h5.416a2 2 0 001.962-1.608l1.2-6A2 2 0 0015.56 8H12V4a2 2 0 00-2-2 1 1 0 00-1 1v.667a4 4 0 01-.8 2.4L6.8 7.933a4 4 0 00-.8 2.4z"/>
                        </svg>
                    </div>
                    <h2 class="font-heading text-3xl font-bold text-primary-800">Silver Sponsors</h2>
                </div>
                <p class="text-gray-600">Supporting The Crocs with dedication</p>
            </div>
            
            <div class="grid grid-cols-2 md:grid-cols-4 lg:grid-cols-5 gap-4">
                {% for sponsor in sponsors %}
                {% if sponsor.type.indexOf("Silver") !== -1 %}
                <div class="bg-white rounded-lg shadow p-3 hover:shadow-md transition-all duration-300">
                    <div class="text-center">
                        <div class="mb-2 h-12 flex items-center justify-center">
                            <img src="{{ sponsor.logo }}" 
                                 alt="{{ sponsor.name }} Logo" 
                                 class="max-h-full max-w-full object-contain"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="w-full h-12 bg-gray-100 rounded items-center justify-center text-gray-400 text-xs flex" style="display: none;">
                                {{ sponsor.name }}
                            </div>
                        </div>
                        <h3 class="font-heading text-xs font-semibold text-primary-800 mb-1">{{ sponsor.name }}</h3>
                        {% if sponsor.website %}
                        <a href="{{ sponsor.website }}" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="text-primary-600 hover:text-primary-700 text-xs">
                            Visit
                        </a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>

<!-- Community & General Sponsors -->
<section class="page-section bg-white">
    <div class="container">
        <div class="max-w-6xl mx-auto">
            <div class="text-center mb-10">
                <div class="inline-flex items-center space-x-3 mb-4">
                    <div class="w-8 h-8 bg-gradient-to-r from-primary-400 to-primary-600 rounded-full flex items-center justify-center">
                        <svg class="w-4 h-4 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M3.172 5.172a4 4 0 015.656 0L10 6.343l1.172-1.171a4 4 0 115.656 5.656L10 17.657l-6.828-6.829a4 4 0 010-5.656z" clip-rule="evenodd"/>
                        </svg>
                    </div>
                    <h2 class="font-heading text-3xl font-bold text-primary-800">Community Partners</h2>
                </div>
                <p class="text-gray-600">Local businesses and community supporters</p>
            </div>
            
            <div class="grid grid-cols-3 md:grid-cols-5 lg:grid-cols-6 gap-3">
                {% for sponsor in sponsors %}
                {% if sponsor.type != "Platinum" and sponsor.type != "Diamond" and sponsor.type != "Gold" and sponsor.type.indexOf("Silver") === -1 %}
                <div class="bg-secondary-50 rounded-lg p-3 hover:shadow-sm transition-all duration-300 hover:bg-secondary-100">
                    <div class="text-center">
                        <div class="mb-2 h-10 flex items-center justify-center">
                            <img src="{{ sponsor.logo }}" 
                                 alt="{{ sponsor.name }} Logo" 
                                 class="max-h-full max-w-full object-contain"
                                 onerror="this.style.display='none'; this.nextElementSibling.style.display='flex';">
                            <div class="w-full h-10 bg-gray-100 rounded items-center justify-center text-gray-400 text-xs flex" style="display: none;">
                                {{ sponsor.name }}
                            </div>
                        </div>
                        <h3 class="font-heading text-xs font-medium text-primary-800 leading-tight">{{ sponsor.name }}</h3>
                        <p class="text-gray-500 text-xs mt-1">{{ sponsor.type }}</p>
                        {% if sponsor.website %}
                        <a href="{{ sponsor.website }}" 
                           target="_blank" 
                           rel="noopener noreferrer"
                           class="text-primary-600 hover:text-primary-700 text-xs block mt-1">
                            Visit
                        </a>
                        {% endif %}
                    </div>
                </div>
                {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>

