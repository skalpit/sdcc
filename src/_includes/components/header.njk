<header class="bg-black shadow-lg sticky top-0 z-40">
    <div class="container">
        <div class="flex items-center justify-between h-16 lg:h-20">
            <!-- Logo and Club Name -->
            <a href="/" class="flex items-center space-x-3 hover:opacity-80 transition-opacity">
                <div class="flex-shrink-0">
                    <img src="/assets/images/logo.png" alt="{{ site.title }} Logo" class="h-10 w-10 lg:h-12 lg:w-12">
                </div>
                <div class="hidden sm:block">
                    <h1 class="text-white font-heading font-semibold text-lg lg:text-xl">
                        {{ site.title }}
                    </h1>
                    <p class="text-accent-400 text-xs lg:text-sm font-medium">
                        {{ site.subtitle }}
                    </p>
                </div>
            </a>
            
            <!-- Desktop Navigation -->
            <nav class="hidden lg:flex items-center space-x-8" aria-label="Main Navigation">
                {% for item in site.navigation %}
                <a href="{{ item.url }}" 
                   class="nav-link {% if page.url == item.url %}active{% endif %}"
                   {% if item.url == page.url %}aria-current="page"{% endif %}>
                    {{ item.title }}
                </a>
                {% endfor %}
            </nav>
            
            <!-- Mobile Menu Button -->
            <div class="lg:hidden">
                <button type="button" 
                        class="mobile-menu-button text-white hover:text-accent-400 focus:outline-none focus:text-accent-400 transition-colors" 
                        aria-label="Toggle navigation menu"
                        aria-expanded="false">
                    <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16" />
                    </svg>
                </button>
            </div>
        </div>
        
        <!-- Mobile Navigation Menu -->
        <div class="mobile-menu hidden lg:hidden">
            <div class="px-2 pt-2 pb-3 space-y-1 border-t border-gray-800">
                {% for item in site.navigation %}
                <a href="{{ item.url }}" 
                   class="block px-3 py-2 text-white hover:text-accent-400 hover:bg-gray-900 rounded-md font-medium transition-colors {% if page.url == item.url %}text-accent-400 bg-gray-900{% endif %}"
                   {% if item.url == page.url %}aria-current="page"{% endif %}>
                    {{ item.title }}
                </a>
                {% endfor %}
            </div>
        </div>
    </div>
</header>